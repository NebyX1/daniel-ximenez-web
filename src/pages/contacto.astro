---
import Layout from "../layouts/Layout.astro";
import SumateButton from "../components/sumate/SumateButton";
import { Image } from "astro:assets";
import Participate from "../assets/Participate.webp";

const pageTitle = "Sumate | Daniel Ximénez Intendente";
const pageDescription = "¡Sumate a la campaña de Daniel Ximénez y construyamos juntos el futuro de Lavalleja! Descubre cómo puedes participar.";
const imageUrl = "../assets/logo/Logo.jpg";
const pageUrl = "https://danielximenez.info/contacto/";
---

<Layout>

 <!-- Meta tags SEO -->
 <title slot="title">{pageTitle}</title>
 <meta slot="head" name="description" content={pageDescription} />
 <meta slot="head" name="keywords" content="contacto, sumate, campaña política, Daniel Ximénez, Lavalleja" />

 <!-- Open Graph para redes sociales -->
 <meta slot="head" property="og:type" content="website" />
 <meta slot="head" property="og:title" content={pageTitle} />
 <meta slot="head" property="og:description" content={pageDescription} />
 <meta slot="head" property="og:image" content={imageUrl} />
 <meta slot="head" property="og:url" content={pageUrl} />
 <meta slot="head" property="og:site_name" content="Ser Lavalleja" />

 <!-- Twitter Card -->
 <meta slot="head" name="twitter:card" content="summary_large_image" />
 <meta slot="head" name="twitter:title" content={pageTitle} />
 <meta slot="head" name="twitter:description" content={pageDescription} />
 <meta slot="head" name="twitter:image" content={imageUrl} />
 <meta slot="head" name="twitter:url" content={pageUrl} />

 <!-- Canonical URL -->
 <link slot="head" rel="canonical" href={pageUrl} />

 <!-- Datos Estructurados (JSON-LD) -->
 <script type="application/ld+json" slot="head">
 {`
   {
     "@context": "https://schema.org",
     "@type": "WebPage",
     "name": "${pageTitle}",
     "description": "${pageDescription}",
     "url": "${pageUrl}",
     "image": "${imageUrl}"
   }
 `}
 </script>

  <title slot="title">Sumate! | Daniel Ximénez Intendente</title>
  <main class="min-h-screen mt-14 lg:mt-28 md:mt-32">
    <!-- Hero Section -->
    <section
      class="relative h-[70vh] bg-gradient-to-r from-[#1b2e45] to-[#253f5f] overflow-hidden"
    >
      <div class="absolute inset-0">
        <Image
          src={Participate}
          alt="Imagen de Campaña"
          class="w-full h-full object-cover opacity-25 scale-105 hover:scale-110 transition-transform duration-700"
        />
      </div>
      <div
        class="absolute inset-0 bg-gradient-to-t from-[#253f5f]/80 via-transparent to-transparent"
      >
      </div>
      <div
        class="relative container mx-auto px-6 h-full flex flex-col justify-center"
      >
        <h1
          class="text-5xl md:text-7xl font-bold text-white max-w-3xl leading-tight"
        >
          <span class="text-[#ffde59]">¡Sumate</span> a la Campaña!
        </h1>
        <p class="text-xl md:text-2xl text-white/90 mt-4 max-w-2xl">
          Construyamos juntos el futuro de Lavalleja
        </p>
      </div>
    </section>

    <!-- Contenido -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4 md:px-8">
        <div class="max-w-4xl mx-auto">
          <h2
            class="text-4xl md:text-5xl font-bold text-[#253f5f] mb-10 text-center relative"
          >
            ¡Únete a Nosotros para Transformar Lavalleja!
            <span class="block h-1 w-24 bg-[#ffde59] mt-4 mx-auto"></span>
          </h2>

          <!-- Secciones de participación con iconos -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
            <div
              class="bg-gradient-to-br from-[#f5f5f5] to-[#e9e9e9] p-8 rounded-xl shadow-sm"
            >
              <div class="flex items-center mb-4">
                <div class="p-3 bg-[#ffde59]/20 rounded-full mr-4">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-7 w-7 text-[#253f5f]"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"
                    ></path>
                  </svg>
                </div>
                <h3 class="text-xl font-bold text-[#253f5f]">
                  Tus Ideas Importan
                </h3>
              </div>
              <p class="text-gray-700">
                La campaña de Daniel Ximénez es un proyecto abierto y en
                constante construcción. Queremos que cada ciudadano tenga la
                oportunidad de aportar ideas y participar activamente.
              </p>
            </div>

            <div
              class="bg-gradient-to-br from-[#f5f5f5] to-[#e9e9e9] p-8 rounded-xl shadow-sm"
            >
              <div class="flex items-center mb-4">
                <div class="p-3 bg-[#ffde59]/20 rounded-full mr-4">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-7 w-7 text-[#253f5f]"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"
                    ></path>
                  </svg>
                </div>
                <h3 class="text-xl font-bold text-[#253f5f]">
                  Fuerza Colectiva
                </h3>
              </div>
              <p class="text-gray-700">
                Creemos en la fuerza del colectivo y en la importancia de
                construir juntos un futuro mejor. Nuestro programa de gobierno está diseñado
                para evolucionar según las necesidades de nuestra sociedad.
              </p>
            </div>
          </div>

          <!-- Frase destacada -->
          <div
            class="bg-gradient-to-r from-[#f9f9f9] to-[#f0f0f0] p-8 rounded-xl my-12 border-l-4 border-[#ffde59] shadow-sm"
          >
            <p class="text-2xl font-semibold text-[#253f5f] italic text-center">
              "Tu participación es clave para construir el Lavalleja que todos
              soñamos."
            </p>
          </div>

          <!-- Call to Action -->
          <div class="text-center my-16">
            <h3 class="text-3xl font-bold text-[#253f5f] mb-6">
              ¿Querés ser parte del cambio?
            </h3>
            <p class="text-lg mb-8 text-gray-700 max-w-2xl mx-auto">
              Mandanos un mensaje a Whatsapp y un miembro de nuestro equipo se pondrá en
              contacto contigo para coordinar cómo podés contribuir mejor a la
              campaña.
            </p>
            <div
              class="transform hover:scale-105 transition-transform duration-300"
            >
              <SumateButton />
            </div>
          </div>

          <!-- Sección final -->
          <div
            class="bg-gradient-to-r from-[#253f5f] to-[#1d304c] text-white p-10 rounded-xl mt-16 shadow-lg transform hover:scale-[1.01] transition-transform duration-300"
          >
            <h4
              class="text-3xl font-bold mb-6 flex items-center justify-center"
            >
              <span class="text-[#ffde59] mr-2">Compromiso</span> con el Futuro
            </h4>
            <p class="text-xl leading-relaxed text-center">
              Este no es solo un proyecto político; es una misión de vida. Sé
              que, unidos, podemos llevar a Lavalleja a ser el número uno en
              Uruguay. Un Lavalleja de primera es posible, y comienza con
              nosotros. <span class="text-[#ffde59] font-bold"
                >¡Hagámoslo realidad!</span
              >
            </p>
          </div>

          <!-- Sección de contacto -->
          <div class="mt-16 grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
            <div class="p-6">
              <div class="inline-block p-4 bg-[#ffde59]/20 rounded-full mb-4">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-8 w-8 text-[#253f5f]"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
              </div>
              <h5 class="text-xl font-bold text-[#253f5f] mb-2">Email</h5>
              <p class="text-gray-700">contacto@danielximenez.info</p>
            </div>
            <div class="p-6">
              <div class="inline-block p-4 bg-[#ffde59]/20 rounded-full mb-4">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-8 w-8 text-[#253f5f]"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <h5 class="text-xl font-bold text-[#253f5f] mb-2">
                Sede Central
              </h5>
              <p class="text-gray-700">Muy Pronto!</p>
            </div>
            <div class="p-6">
              <div class="inline-block p-4 bg-[#ffde59]/20 rounded-full mb-4">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-8 w-8 text-[#253f5f]"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  ></path>
                </svg>
              </div>
              <h5 class="text-xl font-bold text-[#253f5f] mb-2">Teléfono</h5>
              <p class="text-gray-700">+598 99 34 2505</p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
