---
// Importamos los recursos necesarios
import HomeHeader from "../../assets/banners/HomeHeader.webp";
import HomeSumate from "../../assets/banners/HomeSumate.webp";
import HomePrograma from "../../assets/banners/HomePrograma.webp";
import HomeGiana from "../../assets/banners/HomeGiana.webp";
import HomeStreetSheriff from "../../assets/banners/HomeStreetSheriff.webp";
import HomeKanban from "../../assets/banners/HomeKanban.webp";
import styles from "../../styles/home.module.css";
---

<!-- Componente Header Principal del Home -->
<section class=`${styles.section} mt-14 lg:mt-28 md:mt-32`>
  <div class={styles.imageContainer}>
    <img
      src={HomeHeader.src}
      alt="Daniel Ximénez - Header"
      class={styles.image}
      loading="lazy"
    />
  </div>
  <a href="/bio" class={styles.button}> Conocé a Daniel </a>
</section>

<!-- Componente Programa de Gobierno de Daniel Ximénez -->
<section class={styles.section}>
  <div class={styles.imageContainer}>
    <img
      src={HomePrograma.src}
      alt="Plataforma de Gobierno"
      class={styles.image}
      loading="lazy"
    />
  </div>
  <a href="/propuestas" class={styles.button}> Nuestras Propuestas </a>

  <!-- Componente Sumate al Equipo -->
  <section class={styles.section}>
    <div class={styles.imageContainer}>
      <img
        src={HomeSumate.src}
        alt="Sumate al Equipo"
        class={styles.image}
        loading="lazy"
      />
    </div>
    <a href="/contacto" class={styles.button}> Sumate al Equipo </a>

    <!-- Componente Chatea con GIANA Nuestro Chatbot Inteligente -->
    <section class={styles.section}>
      <div class={styles.imageContainer}>
        <img
          src={HomeGiana.src}
          alt="GIANA - Chatbot Inteligente"
          class={styles.image}
          loading="lazy"
        />
      </div>
      <a
        href="https://giana-ai.streamlit.app/"
        target="_blank"
        class={styles.button}
      >
        Chatea con GIANA
      </a>

      <!-- Componente Street Sheriff -->
      <section class={styles.finalSection}>
        <div class={styles.imageContainer}>
          <img
            src={HomeStreetSheriff.src}
            alt="Street Sheriff"
            class={styles.image}
            loading="lazy"
          />
        </div>
        <a
          href="https://street-sheriff.netlify.app/"
          target="_blank"
          class={styles.button}
        >
          Conocé Street Sheriff
        </a>
      </section>

      <!-- Componente Kanban Board -->
      <section class={styles.finalSection}>
        <div class={styles.imageContainer}>
          <img
            src={HomeKanban.src}
            alt="Kanban Board"
            class={styles.image}
            loading="lazy"
          />
        </div>
        <a
          href="http://kanban-ximenez.penumbra.press/"
          target="_blank"
          class={styles.button}
        >
          Un Nuevo Sistema de Gestión
        </a>
      </section>

      <!-- Script para las animaciones de scroll -->
      <script>
        // JavaScript para las animaciones de scroll
        document.addEventListener("DOMContentLoaded", () => {
          const sections = document.querySelectorAll(".home-section");

          const observer = new IntersectionObserver(
            (entries) => {
              entries.forEach((entry) => {
                if (entry.isIntersecting) {
                  entry.target.classList.add("visible");
                }
              });
            },
            { threshold: 0.1 }
          );

          sections.forEach((section) => {
            observer.observe(section);
          });
        });
      </script>
    </section>
  </section>
</section>
